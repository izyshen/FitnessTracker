<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Home button theme. -->
    <style name="HomeButton">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_width">195dp</item>
        <item name="android:layout_height">195dp</item>
    </style>

    <!-- Checkboxes in NewActivity -->
    <style name="NewActivity">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Text wrappers in AddActivity-->
    <style name="AddActivityWrappers">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Edit text boxes in AddActivity -->
    <style name="AddActivityEditableText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- Textview boxes in Review -->
    <style name = "ReviewProperties">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>