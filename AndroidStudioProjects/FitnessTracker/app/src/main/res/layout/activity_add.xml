<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ishen.fitnesstracker.AddActivity">

    <!-- TODO: make name not-editable -->
    <EditText
        android:id="@+id/editName"
        style="@style/AddActivityEditableText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:text="@string/exercise_name" />

    <EditText
        android:id="@+id/editWeight"
        style="@style/AddActivityEditableText"
        android:layout_below="@id/editName"
        android:layout_marginTop="10dp"
        android:text="@string/exercise_weight" />

    <EditText
        android:id="@+id/editSet"
        style="@style/AddActivityEditableText"
        android:layout_below="@id/editWeight"
        android:layout_marginTop="10dp"
        android:text="@string/number_of_sets"/>

    <EditText
        android:id="@+id/editRep"
        style="@style/AddActivityEditableText"
        android:layout_below="@id/editSet"
        android:layout_marginTop="10dp"
        android:text="@string/number_of_reps"/>

    <!-- TODO: change time, reps and sets to spinner with numbers-->
    <EditText
        android:id="@+id/editTime"
        style="@style/AddActivityEditableText"
        android:layout_below="@id/editRep"
        android:layout_marginTop="10dp"
        android:text="@string/time"/>

    <EditText
        android:id="@+id/editSpeed"
        style="@style/AddActivityEditableText"
        android:layout_below="@id/editRep"
        android:layout_marginTop="10dp"
        android:text="@string/speed"/>

    <Spinner
        android:id="@+id/exercise_type_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_exercise"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:visibility="invisible"/>

</RelativeLayout>
